rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Shares - Allow read for everyone, write for authenticated users
    match /shares/{code} {
      allow read: if true;  // Anyone can read with code
      allow write: if request.auth != null;  // Only authenticated users can write
    }

    // Files inside each share
    match /shares/{code}/files/{fileId} {
      allow read: if true;  // Anyone can read files
      allow write: if request.auth != null;  // Only authenticated users can upload
    }

    // Text edits/updates
    match /shares/{code}/edits/{editId} {
      allow read: if true;  // Anyone can read edits
      allow write: if request.auth != null;  // Only authenticated users can add edits
    }
  }
}